{
  "name": "rails-bare-essentials",
  "image": "ruby:latest",
  "forwardPorts": [3000],
  "workspaceMount": "source=${localWorkspaceFolder},target=/usr/src/app,type=bind",
  "postCreateCommand": "bundle config set --local path 'vendor/bundle' && bundle install",
  "postStartCommand": "sleep infinity",
  "workspaceFolder": "/usr/src/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "Arjun.swagger-viewer",
        "DavidAnson.vscode-markdownlint",
        "donjayamanne.githistory",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-yaml"
      ]
    }
  }
}
